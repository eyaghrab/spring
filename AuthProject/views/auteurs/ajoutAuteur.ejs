<!doctype html>
<html>
<head>
    <% include ../include/head.ejs %>
    <title>Gestion d'une bibliotheque</title>
</head>
<body>
<% include ../include/nav.ejs %>
<div class="container mt-5">
    <h1>Ajouter Auteurs</h1>
    <form method="post" action="/auteurs">
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="nomauteur">Nom</label>
                <input type="text" class="form-control" id="nomauteur"name="nomauteur">
            </div>
            <div class="col-md-6 mb-3">
                <label for="email">Email</label>
                <input type="text" class="form-control" id="email"name="email">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                <label for="numtel">Telephone</label>
                <input type="text" class="form-control" id="numtel"name="numtel">
            </div>
            <div class="col-md-6 mb-3">
                <button type="submit" class="btn btn-success">Ajouter</button>
            </div>
        </div>
    </form>
</div>
</body>
</html>