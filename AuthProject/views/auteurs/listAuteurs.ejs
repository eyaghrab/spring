<!doctype html>
<html>
<head>
    <% include ../include/head %>
    <title> Gestion d'une Bibliotheque</title>
</head>
<body>
<% include ../include/nav %>
<div class="container mt-5">
    <a href="/auteurs/ajout" class="btn btn-success btn-sn" role="button">Ajouter Auteur</a><br/><br/>
    <table id="example" class="table table-striped table-bordered" style="width: 100%">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Telephone</th>
        </tr>
        </thead>
        <tbody>
        <% auteur.forEach(function(aut){ %>
        <tr>
            <td><%= aut.nomauteur %></td>
            <td><%= aut.email %></td>
            <td><%= aut.numtel %></td>
        </tr>
        <% }) %>
        </tbody>
        <tfoot>
        </tfoot>
    </table>
    <script>$(document).ready(function () {
        $('#example').DataTable();
        });
    </script>
</div>
</body>
</html>